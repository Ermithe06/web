<ContentPage
    x:Class="Maui.Charting.Views.EditPhysicianPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Label Text="Edit Physician" FontSize="22" HorizontalOptions="Center" />

            <Entry Placeholder="First Name" Text="{Binding Physician.FirstName}" />
            <Entry Placeholder="Last Name" Text="{Binding Physician.LastName}" />
            <Entry Placeholder="License Number" Text="{Binding Physician.LicenseNumber}" />
            <DatePicker Date="{Binding Physician.GraduationDate}" />
            <Entry Placeholder="Specialization" Text="{Binding Physician.Specialization}" />

            <Button Text="Save"
                    BackgroundColor="Green"
                    TextColor="White"
                    Command="{Binding SaveCommand}" />

            <Button Text="Delete"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding DeleteCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>