<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Charting.Views.EditPatientPage">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Entry Text="{Binding Patient.FirstName}" Placeholder="First Name" />
            <Entry Text="{Binding Patient.LastName}" Placeholder="Last Name" />
            <Entry Text="{Binding Patient.Address}" Placeholder="Address" />

            <DatePicker Date="{Binding Patient.BirthDate}" />

            <Entry Text="{Binding Patient.Race}" Placeholder="Race" />

            <!-- Gender Picker -->
            <Picker Title="Gender"
                    ItemsSource="{Binding GenderOptions}"
                    SelectedItem="{Binding Patient.Gender}" />

            <Button Text="Save Changes"
                    Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>