<Shell
    x:Class="Maui.Charting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.Charting.Views">

    <TabBar>
        <ShellContent
            Title="Patients"
            Route="PatientsPage"
            ContentTemplate="{DataTemplate views:PatientsPage}" />

        <ShellContent
            Title="Physicians"
            Route="PhysiciansPage"
            ContentTemplate="{DataTemplate views:PhysiciansPage}" />

        <ShellContent
            Title="Appointments"
            Route="AppointmentsPage"
            ContentTemplate="{DataTemplate views:AppointmentsPage}" />
    </TabBar>

</Shell>